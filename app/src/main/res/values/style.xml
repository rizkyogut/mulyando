<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="lets_sign_in">
        <item name="android:textSize">37sp</item>
        <item name="font">@font/roboto_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subTitle">
        <item name="android:textSize">28sp</item>
        <item name="font">@font/roboto_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="auth_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/md_theme_light_onSurfaceVariant</item>
        <item name="font">@font/roboto_regular</item>
    </style>

    <style name="button_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="font">@font/roboto_regular</item>
    </style>

    <style name="defaultText">
        <item name="android:textSize">16sp</item>
        <item name="font">@font/roboto_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="defaultTextBold" parent="defaultText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subText">
        <item name="android:textSize">14sp</item>
        <item name="font">@font/roboto_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="subTextBold" parent="subText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardViewDetail">
        <item name="cornerRadius">12dp</item>
        <item name="android:fillColor">@color/md_theme_light_surfaceContainerLow</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="strokeWidth">2dp</item>
    </style>
    
    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>
</resources>